    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "lodash.camelcase": "^4.3.0",
    "postcss": "^7.0.32",
    "postcss-import": "^12.0.1",
    "postcss-modules": "^6.0.0",
    "postcss-nested": "^4.2.1",
    "postcss-url": "^8.0.0",
    "preact": "^10.4.4",
    "preact-render-to-string": "^5.1.9",
    "prettier": "^2.0.5",
    "rollup": "^2.13.1",
    "rollup-plugin-terser": "^6.1.0",
    "serve": "^11.3.2",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
